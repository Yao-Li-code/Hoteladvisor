<% layout('layouts/boilerplate') %>
   



<div class="row">
    <h1 class="text-center">Edit Hotel</h1>
        <div class="col-6 offset-md-3">
            <form action='/hotels/<%= hotel._id %>?_method=PUT' method="POST" 
                 novalidate class="validatedForm"  enctype="multipart/form-data">
                <div class='mb-4'>
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="hotel[title]" 
                    value="<%= hotel.title %>" required>
                    
                    
                </div>
                <div class='mb-4'>
                    <label class="form-label" for="price">Price</label>
                    <div class="input-group">
                       <div class="input-group-prepend">
                           <span class="input-group-text" id="price-label">$</span>
                        </div>
                       <input type="text" class="form-control" id="price" placeholder="0.00" 
                       aria-label="price" name="hotel[price]" 
                       value="<%= hotel.price %>" required>
                   </div>
                </div>

               
    
                <div class='mb-4'>
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" id="location" 
                    name="hotel[location]" value="<%= hotel.location %>" required>
                    
                </div>
                

                <div class='mb-4'>
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" id="description" name="hotel[description]"
                    required><%= hotel.description %></textarea>
                    
                </div>

                <div class="mb-4">
                    <label for="image" class="form-label">Add image(s)</label>
                    <input class="form-control" type="file" id="image" name="image" multiple>
                </div>  

                <div class="mb-4" >
                    <% hotel.images.forEach(function(img,i){ %>
                        <img src="<%=img.thumbnail%>" class="img-thumbnail" alt="" >
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="image-<%= i %>" name="deleteImages[]" value="<%=img.filename%>">
                            <label class="form-check-label" for="image-<%= i %>">Delete this image</label>
                        </div>   
                    <% })%>
                </div>



                <button class='mb-4 btn btn-success'>Update Hotel</button>
            
              </form>
            <a href="/hotels/<%= hotel._id%>">Back to Hotel</a>
            
        </div>
</div>




  

    
