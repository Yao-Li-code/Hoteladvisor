<% layout('layouts/boilerplate') %>
<div id="cluster-map"></div>
    <h1>All Hotels</h1>
    <ul>
        <% for (let hotel of hotels) {%>
         <div class="card mb-3">
             <div class="row">
                 <div class="col-md-4">
                     <% if (hotel.images.length) { %>
                     <img class="img-fluid" alt="" src="<%= hotel.images[0].url%>">

                     <% } else { %>
                    
                        <img class="img-fluid" alt="" src="https://res.cloudinary.com/dulrdkthp/image/upload/v1614699478/Hoteladvisor/v1bghcrovpmhwtvc0hne.jpg">

                     <% } %>


                 </div>
                 <div class="col-md-8">
                     <div class="card-body">
                         <h5 class="card-title"><%= hotel.title %></h5>
                         
                         <p class="card-text"><%= hotel.description %></p>
                         <p class="card-text">
                             <small class="text-muted"><%= hotel.location %></small>
                         </p>
                         <a class="btn btn-primary"
                         href="/hotels/<%= hotel._id%>"
                         >View <%= hotel.title %></a>
                     </div>
                 </div>
             </div>

         </div>



        <% }%>
    </ul>

    <script>
        const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
        const hotels = { features: <%- JSON.stringify(hotels) %>}
    </script>
    
    <script src="/javascript/clusterMap.js"></script>
